<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#283E51"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="416dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="#CBB67D"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/newsFeedIcon"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/news_feed_icon"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/peopleIcon"
            android:layout_width="wrap_content"
            android:contentDescription="@string/album"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/find_people_icon" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/notification_icon"
            android:contentDescription="@string/notifications" />

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/menu_icon"
            android:contentDescription="@string/menu" />


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="409dp"
        android:layout_height="651dp"
        android:layout_marginTop="1dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#CBB67D"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/myProfile"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="end"
                        android:layout_margin="15dp"
                        android:src="@drawable/download"
                        app:civ_border_color="#283E51"
                        app:civ_border_width="5dp" />

                    <TextView
                        android:id="@+id/myName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/calistoga"
                        android:text="@string/hi_adam"
                        android:textColor="#283E51"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="50dp"
                        android:fontFamily="@font/berkshire_swash"
                        android:text="@string/welcome_to_albumatic"
                        android:textColor="#283E51"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/welcome_note_bg"
                        android:fontFamily="@font/baloo_chettan"
                        android:text="@string/total_visits_232x"
                        android:textAlignment="center"
                        android:textColor="#F2DABC"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardBackgroundColor="#F2DABC"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cardbg"
                        android:alpha="0.7"
                        android:contentDescription="@string/todo" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/calistoga"
                        android:text="@string/school_life_is_so_special"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/galada"
                        android:text="@string/let_s_share_some_memories"/>
                </androidx.cardview.widget.CardView>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="@string/login"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="#CBB67D"
                            app:cardCornerRadius="10dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <com.appbroker.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/imagefr"
                                app:radius="10dp"
                                tools:ignore="ImageContrastCheck" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="#CBB67D"
                            app:cardCornerRadius="10dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <com.appbroker.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/image_fr2"
                                app:radius="10dp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="#CBB67D"
                            app:cardCornerRadius="10dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <com.appbroker.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/image4"
                                app:radius="10dp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="#CBB67D"
                            app:cardCornerRadius="10dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <com.appbroker.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/image3"
                                app:radius="10dp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="#CBB67D"
                            app:cardCornerRadius="10dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <com.appbroker.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/image_fr"
                                app:radius="10dp" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/myLinear"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/our_identities"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/aclonica"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="#F2DABC"
                            app:cardElevation="2dp"
                            android:layout_margin="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/computer"
                                android:contentDescription="@string/todo" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="#F2DABC"
                            app:cardElevation="2dp"
                            android:layout_margin="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/chemistry"
                                android:contentDescription="@string/todo" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="#F2DABC"
                            app:cardElevation="2dp"
                            android:layout_margin="8dp">

                            <androidx.constraintlayout.utils.widget.ImageFilterView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/books"/>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/our_respective_leaders"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/aclonica"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="#F2DABC"
                            app:cardElevation="2dp"
                            android:layout_margin="8dp">

                            <com.appbroker.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:radius="10dp"
                                android:src="@drawable/dpprofile"/>
                            
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="#F2DABC"
                            app:cardElevation="2dp"
                            android:layout_margin="8dp">

                            <com.appbroker.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                app:radius="10dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/dpprofile"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="#F2DABC"
                            app:cardElevation="2dp"
                            android:layout_margin="8dp">

                            <com.appbroker.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:radius="10dp"
                                android:src="@drawable/dpprofile"/>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="580dp"
                        android:layout_gravity="center"
                        android:background="@drawable/linear_container"
                        android:orientation="vertical"
                        android:elevation="15dp">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="@string/explore_more"
                            android:textSize="20sp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/welcome_note_bg"
                            android:textStyle="bold|italic"
                            android:textAlignment="center"
                            android:textColor="#F2DABC"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/history"
                                android:contentDescription="@string/todo" />
                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:textSize="15sp"
                                 android:text="@string/trace_some_exciting_n_stories_on_what_happened_n_during_our_school"
                                 android:textStyle="bold|bold|bold"
                                 android:layout_marginStart="25dp"
                                 android:layout_marginTop="10dp"
                                 android:textColor="#283E51"
                                 android:textAlignment="center"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/computerlib"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/meet_your_mates_n_to_help_you_learn_n_a_digital_skills"
                                android:textSize="15sp"
                                android:textStyle="bold|bold|bold"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#283E51"
                                android:textAlignment="center"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/read"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="@string/discover_helpful_tips_n_on_how_to_build_n_a_successful_career"
                                android:textStyle="bold|bold|bold"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#283E51"
                                android:textAlignment="center"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/library"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textStyle="bold|bold|bold"
                                android:text="@string/learning_is_a_continues_n_process_here_is_a_mini_n_library_to_help_your_journey"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#283E51"
                                android:textAlignment="center"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="10dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/practice"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/teamwork_is_a_great_n_way_to_to_achieve_a_task_n_join_your_mates_n_community_now"
                                android:textSize="15sp"
                                android:textStyle="bold|bold|bold"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="10dp"
                                android:textColor="#283E51"
                                android:textAlignment="center"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="@string/let_s_be_together_always"
                            android:background="@drawable/welcome_note_bg"
                            android:textSize="15sp"
                           android:paddingStart="10dp"
                            android:paddingEnd="5dp"
                            android:textStyle="bold|bold|italic"
                            android:textColor="#fff"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="-5dp"
                            android:layout_gravity="end|bottom"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>
                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>