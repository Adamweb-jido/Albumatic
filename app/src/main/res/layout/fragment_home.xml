<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#283E51"
    tools:context=".HomeFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="280dp">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@drawable/welcome_note_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></View>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/userprofile"
                    app:civ_border_color="#283E51"
                    app:civ_border_width="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.944"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:text="Hi! Adam"
                    android:textSize="40sp"
                    android:alpha="0.7"
                    android:textColor="#283E51"
                    android:textStyle="bold"
                    android:fontFamily="@font/baloo_chettan"
                    app:layout_constraintEnd_toStartOf="@+id/circleImageView"
                    app:layout_constraintHorizontal_bias="0.305"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="149dp"
                    android:alpha="0.8"
                    android:fontFamily="@font/calistoga"
                    android:text="Welcome to Albumatic"
                    android:textColor="#283E51"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintEnd_toEndOf="@+id/view"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintVertical_bias="0.028" />

                <androidx.cardview.widget.CardView
                    android:layout_width="390dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.473"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                    app:layout_constraintVertical_bias="1.0" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total visit: 23x"
                        android:alpha="0.7"
                        android:textSize="30sp"
                        android:textColor="#A7041F"
                        android:layout_marginStart="100dp"
                        android:fontFamily="@font/berkshire_swash"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Let's share some memories."
                        android:layout_gravity="bottom"
                        android:textSize="24sp"
                        android:layout_marginStart="60dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/galada"/>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scrollbars="horizontal"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                     <androidx.cardview.widget.CardView
                         android:layout_width="380dp"
                         android:layout_height="220dp"
                         app:cardCornerRadius="10dp"
                         app:cardUseCompatPadding="true"
                         app:cardBackgroundColor="#CBB67D"
                         android:layout_margin="10dp">

                         <com.appbroker.roundedimageview.RoundedImageView
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:scaleType="fitXY"
                             app:radius="10dp"
                             android:src="@drawable/imgschool1"/>
                     </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="380dp"
                        android:layout_height="220dp"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="#CBB67D"
                        android:layout_margin="10dp">

                        <com.appbroker.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:radius="10dp"
                            android:src="@drawable/imgschool1"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="380dp"
                        android:layout_height="220dp"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="#CBB67D"
                        android:layout_margin="10dp">

                        <com.appbroker.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:radius="10dp"
                            android:src="@drawable/imgschool1"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="380dp"
                        android:layout_height="220dp"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="#CBB67D"
                        android:layout_margin="10dp">

                        <com.appbroker.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:radius="10dp"
                            android:src="@drawable/imgschool1"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="380dp"
                        android:layout_height="220dp"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="#CBB67D"
                        android:layout_margin="10dp">

                        <com.appbroker.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:radius="10dp"
                            android:src="@drawable/imgschool1"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="150dp"
                 android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our identities"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                       android:textAlignment="center"
                        android:fontFamily="@font/calistoga"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="1dp"
                            app:cardBackgroundColor="#CBB67D"
                            app:cardUseCompatPadding="true">
                            <com.appbroker.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/computer"/>
                        </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           app:cardCornerRadius="10dp"
                           android:layout_margin="1dp"
                           app:cardBackgroundColor="#CBB67D"
                           app:cardUseCompatPadding="true">
                           <com.appbroker.roundedimageview.RoundedImageView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:src="@drawable/computer"/>
                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           app:cardCornerRadius="10dp"
                           android:layout_margin="1dp"
                           app:cardBackgroundColor="#CBB67D"
                           app:cardUseCompatPadding="true">
                           <com.appbroker.roundedimageview.RoundedImageView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:src="@drawable/computer"/>
                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           app:cardCornerRadius="10dp"
                           android:layout_margin="1dp"
                           app:cardBackgroundColor="#CBB67D"
                           app:cardUseCompatPadding="true">
                           <com.appbroker.roundedimageview.RoundedImageView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:src="@drawable/computer"/>
                       </androidx.cardview.widget.CardView>
                   </LinearLayout>
             </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our Respective Leaders"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/calistoga"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="#CBB67D"
                        app:cardUseCompatPadding="true">
                        <com.appbroker.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/computer"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="#CBB67D"
                        app:cardUseCompatPadding="true">
                        <com.appbroker.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/computer"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="#CBB67D"
                        app:cardUseCompatPadding="true">
                        <com.appbroker.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/computer"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>