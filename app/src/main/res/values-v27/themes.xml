<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TrialApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="color">@color/status_bar_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize Your Bottom Nav Bar -->

        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize Your Bottom Nav Bar -->
        <item name="android:windowLightStatusBar">@color/status_bar_color</item>
        <item name="android:windowLightNavigationBar">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
    </style>
</resources>